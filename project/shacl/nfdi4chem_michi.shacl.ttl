@prefix OBI: <http://purl.obolibrary.org/obo/OBI_> .
@prefix michi: <https://w3id.org/NFDI4Chem/MIChI> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix schema1: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

OBI:0001209 a sh:NodeShape ;
    sh:closed true ;
    sh:description "The planned process to analyse/assay a sample." ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:targetClass OBI:0001209 .

schema1:Thing a sh:NodeShape ;
    sh:closed true ;
    sh:description "A generic grouping for any identifiable entity" ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [ sh:datatype xsd:anyURI ;
            sh:description "A unique identifier for a thing" ;
            sh:maxCount 1 ;
            sh:nodeKind sh:Literal ;
            sh:order 0 ;
            sh:path schema1:identifier ],
        [ sh:datatype xsd:string ;
            sh:description "A human-readable name for a thing" ;
            sh:maxCount 1 ;
            sh:nodeKind sh:Literal ;
            sh:order 1 ;
            sh:path schema1:name ],
        [ sh:datatype xsd:string ;
            sh:description "A human-readable description for a thing" ;
            sh:maxCount 1 ;
            sh:nodeKind sh:Literal ;
            sh:order 2 ;
            sh:path schema1:description ] ;
    sh:targetClass schema1:Thing .

michi:ChemicalSubstance a sh:NodeShape ;
    sh:closed true ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:targetClass michi:ChemicalSubstance .

michi:DatasetCollection a sh:NodeShape ;
    sh:closed true ;
    sh:description "A holder for Dataset objects" ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [ sh:class michi:Dataset ;
            sh:nodeKind sh:IRI ;
            sh:order 0 ;
            sh:path michi:entries ] ;
    sh:targetClass michi:DatasetCollection .

michi:Molecule a sh:NodeShape ;
    sh:closed true ;
    sh:description "A molecular entity" ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:targetClass michi:Molecule .

michi:Sample a sh:NodeShape ;
    sh:closed true ;
    sh:description "The material entity that is being evaluated." ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:targetClass michi:Sample .

michi:Dataset a sh:NodeShape ;
    sh:closed true ;
    sh:description "Represents a Dataset" ;
    sh:ignoredProperties ( rdf:type ) ;
    sh:property [ sh:datatype xsd:string ;
            sh:description "A human-readable description for a thing" ;
            sh:maxCount 1 ;
            sh:nodeKind sh:Literal ;
            sh:order 2 ;
            sh:path schema1:description ],
        [ sh:datatype xsd:anyURI ;
            sh:description "A unique identifier for a thing" ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:nodeKind sh:Literal ;
            sh:order 0 ;
            sh:path schema1:identifier ],
        [ sh:datatype xsd:string ;
            sh:description "A human-readable name for a thing" ;
            sh:maxCount 1 ;
            sh:nodeKind sh:Literal ;
            sh:order 1 ;
            sh:path schema1:name ] ;
    sh:targetClass michi:Dataset .

